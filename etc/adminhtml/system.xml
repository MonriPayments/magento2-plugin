<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Config/etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="pikpay" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Monri</label>
                <field id="active" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="title" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Title</label>
                </field>
                <field id="procesor" translate="label" type="select" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Procesor</label>
                    <source_model>Leftor\PikPay\Model\Config\Source\Procesor</source_model>
                </field>
                <field id="payment_type" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Payment Type</label>
                    <source_model>Leftor\PikPay\Model\Config\Source\PaymentType</source_model>
                </field>
                <field id="payment_action" translate="label" type="select" sortOrder="11" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Payment Action</label>
                    <source_model>Leftor\PikPay\Model\Config\Source\PaymentAction</source_model>
                </field>
                <field id="test_mode" translate="label" type="select" sortOrder="13" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Test Mode</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="language" translate="label" type="select" sortOrder="14" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Language</label>
                    <source_model>Leftor\PikPay\Model\Config\Source\ConfigLanguage</source_model>
                </field>
                <field id="key" translate="label" type="text" sortOrder="15" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Key</label>
                </field>
                <field id="auth_token" translate="label" type="text" sortOrder="16" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Auth Token</label>
                </field>
                <field id="currency" translate="label" type="select" sortOrder="18" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Currency</label>
                    <source_model>Leftor\PikPay\Model\Config\Source\Currency</source_model>
                </field>
                <field id="order_status" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>New Order Status</label>
                    <source_model>Leftor\PikPay\Model\Config\Source\Order\Status\Pendingpayment</source_model>
                </field>
                <field id="order_status_on_success" translate="label" type="select" sortOrder="21" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Order Status ON Success</label>
                    <source_model>Leftor\PikPay\Model\Config\Source\Order\Status\Pendingpayment</source_model>
                </field>
                <field id="order_status_on_fail" translate="label" type="select" sortOrder="22" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Order Status On Fail</label>
                    <source_model>Leftor\PikPay\Model\Config\Source\Order\Status\Pendingpayment</source_model>
                </field>
                <field id="allowspecific" translate="label" type="allowspecific" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Payment from Applicable Countries</label>
                    <source_model>Magento\Payment\Model\Config\Source\Allspecificcountries</source_model>
                </field>
                <field id="specificcountry" translate="label" type="multiselect" sortOrder="41" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Payment from Specific Countries</label>
                    <source_model>Magento\Directory\Model\Config\Source\Country</source_model>
                    <can_be_empty>1</can_be_empty>
                </field>
                <field id="installments" translate="label" type="select" sortOrder="42" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Payment in installments</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <depends>
                        <field id="*/*/payment_type">3</field>
                    </depends>
                </field>
                <field id="installments_number" translate="label" type="text" sortOrder="43" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Number of installments</label>
                    <validate>validate-number</validate>
                    <depends>
                        <field id="*/*/installments">1</field>
                        <field id="*/*/payment_type">3</field>
                    </depends>
                </field>
                <field id="installments_minimum" translate="label" type="text" sortOrder="43" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Minimum amount of payments in installments</label>
                    <validate>validate-number</validate>
                    <depends>
                        <field id="*/*/installments">1</field>
                        <field id="*/*/payment_type">3</field>
                    </depends>
                </field>
                <field id="installments_percentage" translate="label" type="text" sortOrder="44" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Order percentage for payment in installments %</label>
                    <validate>validate-number</validate>
                    <depends>
                        <field id="*/*/installments">1</field>
                        <field id="*/*/payment_type">3</field>
                    </depends>
                </field>
                <field id="bin" translate="label" type="textarea" sortOrder="45" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>List of Credit card BINs</label>
                    <comment>Separate by comma</comment>
                    <depends>
                        <field id="*/*/installments">1</field>
                        <field id="*/*/payment_type">3</field>
                    </depends>
                </field>
                <field id="percentage" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Order percentage %</label>
                    <validate>validate-number</validate>
                    <depends>
                        <field id="*/*/payment_type">3</field>
                    </depends>
                </field>
                <field id="instructions" translate="label" type="textarea" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Instructions</label>
                </field>
                <field id="sort_order" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Sort Order</label>
                    <frontend_class>validate-number</frontend_class>
                </field>
            </group>
        </section>
    </system>
</config>
